-var baseURL = '/crd/';

header.header.headroom
  div.header__start
    a.header__logo(href=`${baseURL}` aria-label="Logo du Conservatoire")
      |
      include ../../img/logo.svg
  div.header__end
    button.header__menuBtn.menuBurger(aria-label="menu" aria-expanded="false" aria-controls="mainNav")
      span.menuBurger__bar(aria-hidden="true")
      
    // Début du formulaire de recherche
    .searchForm
      button.searchForm__close(aria-label='Fermer le formulaire de recherche')
        svg(viewbox='0 0 24 24')
          title cross
          path(d='M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z')
      form.searchForm__form(action='#' method='get')
        label.sr-only(for='searchForm') Rechercher
        input#searchForm.searchForm__input(type='search' name='s' placeholder='Rechercher…' value='')
        button.searchForm__submit(type='submit' aria-label='Rechercher')
          svg(width='24' height='24' aria-hidden='true' fill='none' xmlns='http://www.w3.org/2000/svg')
            circle(cx='11' cy='10' r='7' stroke='#191919' stroke-width='2')
            path(stroke='#191919' stroke-width='2' d='M17.707 17.293l3.536 3.535')
    // Fin du formulaire de recherche

    //- include menu-dropdown.pug
    // Début du menu
    include menu-simple.pug
    // Fin du menu

    button.header__search(aria-label="Rechercher")
      |
      include ../../img/Icon_search.svg